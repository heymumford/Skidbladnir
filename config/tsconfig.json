{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "../dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "baseUrl": "..",
    "paths": {
      "@domain/*": ["pkg/domain/*"],
      "@usecases/*": ["pkg/usecases/*"],
      "@interfaces/*": ["pkg/interfaces/*"],
      "@infrastructure/*": ["internal/*"]
    },
    "isolatedModules": true,
    "allowJs": true
  },
  "include": [
    "../cmd/**/*",
    "../pkg/**/*",
    "../internal/**/*", 
    "../domain/**/*",
    "../packages/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/tests/**"
  ]
}